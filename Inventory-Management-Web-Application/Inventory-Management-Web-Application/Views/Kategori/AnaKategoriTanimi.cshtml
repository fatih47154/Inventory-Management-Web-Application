
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-12">
                    <b> Yeni Ana Kategori Ekle</b>
                </div>
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kategori/AnaKategoriTanimi">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kategori Adı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Ürün Adı Giriniz..." name="KategoriAdi" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kategori Açıklama </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Ürün Kodu Giriniz..." name="Aciklama" required>
                                </div>                             
                                <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                <a href="/Kategori/AnaKategoriListesi" class="btn btn-danger">İptal</a>
                                <button type="reset" class="btn btn-default">Temizle</button>
                            </div>

                        </div>
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>

