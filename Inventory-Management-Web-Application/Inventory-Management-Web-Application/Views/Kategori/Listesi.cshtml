
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Inventory_Management_Web_Application.Models

@model List<Kategori>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Listesi
                <a href="../Kategori/Ekle" class="btn btn-success" style="float: right;"><i class="icon-plus"></i> Kategori Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                <tr>
                    <th> Adı</th>
                    <th> Açıklama</th>
                    <th style="float:right;"> İşlemler</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr  id="@item.ID">
                        <td>@item.KategoriAdi</td>
                        <td>@item.Aciklama</td>
                        <td>
                            <a style="float:right;" data-id="@item.ID" class="btn btn-danger btn-xs"><i class="icon-trash "> Sil</i></a>
                            <a style="float:right;padding-right:5px;" href="../Kategori/Duzenle/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i> Düzenle</a>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </section>
    </div>
</div>

