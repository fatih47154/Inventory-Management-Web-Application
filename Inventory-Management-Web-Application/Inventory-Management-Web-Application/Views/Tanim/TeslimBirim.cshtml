
@{
    ViewBag.Title = "TeslimBirim";
}

@using Inventory_Management_Web_Application.Models

@model List<Birim>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Birim Ekle (Fak / Myo)
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Tanim/TeslimBirimEkle">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Birim Adı </label>
                        <input type="text" class="form-control" placeholder="Birim Adı Giriniz..." name="Adi" required>
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Birim Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> Adı</th>
                        <th style="float:right;"> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr  id="@item.ID">
                            <td>
                                @item.Adi
                            </td>
                            <td>
                                <a style="float:right;" data-id="@item.ID" class="btn btn-danger btn-xs sil"><i class="icon-trash "> Sil</i></a>
                                <a style="float:right;padding-right:5px;" href="/Tanim/TeslimBirimDuzenle/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i> Düzenle</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>


<script src="/Content/js/jquery.js"></script>
<script src="/Content/js/jquery-1.8.3.min.js"></script>

<script>
        $(document).ready(function () {
            $('.sil').click(function () {
                var id = $(this).attr("data-id");
                $.ajax({
                    url: '/Tanim/teslimBirimSil/' + id,
                    type: 'POST',
                    success: function (rs) {
                        if (rs === true) {
                            $('#' + id).remove();
                        }
                        else {
                            alert('Silme işlemi gerçekleşirken bir hata oluştu.');
                        }
                    },
                    error: function (rs) {
                        alert('Bir hata oluştu' + id);
                    }
                });
            });
        });

</script>

