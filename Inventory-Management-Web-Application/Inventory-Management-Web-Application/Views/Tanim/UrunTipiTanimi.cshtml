
@{
    ViewBag.Title = "UrunTipiTanimi";
}



@using Inventory_Management_Web_Application.Models

@model List<UrunTip>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               Ürün Tipi Tanımı
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Tanim/UrunTipiEkle">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tip Adı </label>
                        <input type="text" class="form-control" placeholder="Tip Adı Giriniz..." name="Adi" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tip Açıklama </label>
                        <input type="text" class="form-control" placeholder="Tip Açıklama Giriniz..." name="Aciklama" >
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Tip Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> Adı</th>
                        <th> Açıklama</th>
                        <th style="float:right;"> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.ID">
                        <td>
                            @item.Adi
                        </td>
                        <td>
                            @item.Aciklama
                        </td>
                        <td>
                            <a title="Sil" style="float:right;margin-left:5px;" class="btn btn-danger btn-xs btn-confirm" data-id="@item.ID"><i class="icon-trash"></i> Sil</a>
                            <a style="float:right;padding-right:5px;" href="/Tanim/UrunTipiDuzenle/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i> Düzenle</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>



<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Bu Ürün Tipini Silmek İstediğinizden Emin misiniz ?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="modal-btn-si">Sil</button>
                <button type="button" class="btn btn-primary" id="modal-btn-no">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script src="/Content/js/jquery.js"></script>
<script src="/Content/js/jquery-1.8.3.min.js"></script>

<script>
    var id;
    var modalConfirm = function (callback) {
        $(".btn-confirm").on("click", function () {
            id = $(this).attr("data-id");
            $("#mi-modal").modal('show');
        });

        $("#modal-btn-si").on("click", function () {
            callback(true);
            $("#mi-modal").modal('hide');
        });

        $("#modal-btn-no").on("click", function () {
            callback(false);
            $("#mi-modal").modal('hide');
            return e.preventDefault()
        });
    };

    modalConfirm(function (confirm) {
        if (confirm) {
            $.ajax({
                url: '/Tanim/UrunTipiSil/' + id,
                type: 'POST',
                success: function (rs) {
                    if (rs === true) {
                        $('#' + id).remove();
                    }
                    else if (rs === "FK")
                    {
                        alert("Bu Ürün Tipine ait ürün kaydı Bulunduğundan dolayı bu ürün tipini Silemezsiniz. ");
                    }
                    else {
                        alert('Silme işlemi gerçekleşirken bir hata oluştu.');
                    }
                },
                error: function (rs) {
                    alert('Bir hata oluştu');
                }
            });
        } else {
            console.log("vazgeci");
        }
    });
</script>
