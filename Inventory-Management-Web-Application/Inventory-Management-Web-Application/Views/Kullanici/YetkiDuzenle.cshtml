
@{
    ViewBag.Title = "YetkiDuzenle";
}


@using Inventory_Management_Web_Application.Models

@model Rol


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda <b>@Model.RolAdi</b> isimli profili düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Kullanici/YetkiDuzenle">
                    @Html.Hidden("ID", Model.ID)
                    @if(Model.RolAdi.ToString() == "Admin" || Model.RolAdi.ToString() == "LDAP")
                    {
                        <div class="form-group">
                            <label for="exampleInputEmail1" style="color:red;">Bu Profilinin Adı düzenlemez. </label>
                            <input type="text" class="form-control hidden" value="@Model.RolAdi" name="RolAdi" required>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label for="exampleInputEmail1">Profil Adı </label>
                            <input type="text" class="form-control" value="@Model.RolAdi" placeholder="Profil Adı Giriniz..." name="RolAdi" required>
                        </div>
                    }
                    <div class="form-group">
                        <label for="exampleInputEmail1">Profil Açıklama </label>
                        <input type="text" class="form-control" value="@Model.Aciklama" placeholder="Profil Açıklama Giriniz..." name="Aciklama" required>
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>

