
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Inventory_Management_Web_Application.Models

@model Urun

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda <b> @Model.UrunAdi </b>ürününü düzenliyorsunuz...
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Urun/Guncelle">
                    @Html.Hidden("ID", Model.ID)
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kategori Seçiniz </label>
                        @Html.DropDownList("KategoriID", (SelectList)ViewBag.kategoriler, "Seçiniz...", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Adı </label>
                        <input type="text" class="form-control" placeholder="Ürün Adı Giriniz..." name="UrunAdi" value="@Model.UrunAdi" required >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Kodu </label>
                        <input type="text" class="form-control" placeholder="Ürün Kodu Giriniz..." name="UrunKodu" value="@Model.UrunKodu"  required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Seri No </label>
                        <input type="text" class="form-control" placeholder="Ürün Seri No Giriniz..." name="UrunSeriNo" value="@Model.UrunSeriNo"  required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Stok Miktarı </label>
                        <input type="text" class="form-control" placeholder="Stok Miktarı Giriniz..." name="StokMiktari" value="@Model.StokMiktari"  required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Birim Seçiniz </label>
                        @Html.DropDownList("UrunBirimID", (SelectList)ViewBag.urunbirimler, "Seçiniz...", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürün Açıklama </label>
                        <input type="text" class="form-control" placeholder="Açıklama Giriniz..." value="@Model.Aciklama"  name="Aciklama">
                    </div>
                    <button style="float:right;" type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>

