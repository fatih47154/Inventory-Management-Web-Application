
@{
    ViewBag.Title = "TeslimBirim";
}

@using Inventory_Management_Web_Application.Models

@using Inventory_Management_Web_Application.App_Classes

@{
    var urunler = (Inventory_Management_Web_Application.App_Classes.UrunCikis)Session["Urun"];
    List<Urun> liste = urunler.HepsiniGetir();
} 

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Çıkartılacak Ürünlerin Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> Adı</th>
                        <th style="float:right;"> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{List<Urun> temp = new List<Urun>();
                    }
                    @foreach (Urun item in liste)
                    {
                        if (temp.Where(x => x.ID == item.ID).SingleOrDefault() != null)
                        {
                            continue;
                        }
                        <tr id="@item.ID">
                            <td>
                                @item.UrunAdi (@liste.Where(x => x.ID == item.ID).ToList().Count @item.UrunBirim.Adi)
                            </td>
                            <td>
                                <a title="Sil" style="float:right;margin-left:5px;" class="btn btn-danger btn-xs btn-confirm" data-id="@item.ID"><i class="icon-trash"></i> Sil</a>
                            </td>
                        </tr>
                        temp.Add(item);
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Birim Ekle (Fak / Myo)
            </header>
            <div class="panel-body">
                <form role="form" method="post" action="/Urun/stokCikarView">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürünü Çıkartan Kişiyi Seçiniz </label>
                        @Html.DropDownList("TeslimVerenID", (SelectList)ViewBag.teslimverenler, "Seçiniz...", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürünü Teslim Alan Kişiyi Seçiniz </label>
                        @Html.DropDownList("TeslimAlanKisiID", (SelectList)ViewBag.teslimalanlar, "Seçiniz...", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Teslim Tarihi Giriniz </label>
                        <input type="date" class="form-control" placeholder="Birim Adı Giriniz..." name="TeslimTarihi" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Açıklama Giriniz. </label>
                        <input type="text" class="form-control" placeholder="Birim Adı Giriniz..." name="Aciklama" required>
                    </div>
                    <button type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>




<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Bu Birimi Silmek İstediğinizden Emin misiniz ?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="modal-btn-si">Sil</button>
                <button type="button" class="btn btn-primary" id="modal-btn-no">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script src="/Content/js/jquery.js"></script>
<script src="/Content/js/jquery-1.8.3.min.js"></script>

<script>
    var id;
    var modalConfirm = function (callback) {
        $(".btn-confirm").on("click", function () {
            id = $(this).attr("data-id");
            $("#mi-modal").modal('show');
        });

        $("#modal-btn-si").on("click", function () {
            callback(true);
            $("#mi-modal").modal('hide');
        });

        $("#modal-btn-no").on("click", function () {
            callback(false);
            $("#mi-modal").modal('hide');
        });
    };

    modalConfirm(function (confirm) {
        if (confirm) {
            $.ajax({
                url: '/Tanim/teslimBirimSil/' + id,
                type: 'POST',
                success: function (rs) {
                    if (rs === true) {
                        $('#' + id).remove();
                    }
                    else if (rs === "FK") {
                        alert("Bu Birime ait Personel kaydı Bulunduğundan dolayı bu Birimi Silemezsiniz. ");
                    }
                    else {
                        alert('Silme işlemi gerçekleşirken bir hata oluştu.');
                    }
                },
                error: function (rs) {
                    alert('Bir hata oluştu');
                }
            });
        } else {
            console.log("vazgeci");
        }
    });
</script>