
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Inventory_Management_Web_Application.Models

@model Urun

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şu anda <b> @Model.UrunAdi </b>ürünü için garanti / arıza kaydı oluşturuyorsunuz...
            </header>
            <div class="panel-body">
                @if (ViewBag.stok!=null)
                {
                    <div class="alert alert-danger">
                        <p>@ViewBag.stok </p>
                    </div>
                }
                <form role="form" method="post" action="/Urun/Garanti">
                    <input type="text" class="hidden" name="UrunID" value="@Model.ID" required>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Çıkış Tarihi </label>
                        <input type="date" class="form-control" placeholder="Çıkış Tarihi Giriniz..." name="VerilisTarihi" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tahmini Geliş Tarihi </label>
                        <input type="date" class="form-control" placeholder="Tahmini Geliş Giriniz..." name="TahminiGelisTarihi" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Garanti Firma</label>
                        <input type="text" class="form-control" placeholder="Ürün Kodu Giriniz..." name="GarantiFirma">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kargo No</label>
                        <input type="text" class="form-control" placeholder="Kargo No Giriniz..." name="KargoNo">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Çıkartılacak Miktar </label> &nbsp;<span style="color: red;">@Model.StokMiktari @Model.UrunBirim.Adi stok bulunmaktadır.</span>
                        <input type="number" class="form-control" placeholder="Çıkartılacak Miktar Giriniz..." name="Adet" min="1" max="@Model.StokMiktari ">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ürünü Çıkartan Kişiyi Seçiniz </label>
                        @Html.DropDownList("GarantiVerenKisiID", (SelectList)ViewBag.personeller, "Seçiniz...", new { @class = "form-control", required = "required" })
                    </div>
                    <button style="float:right;" type="submit" class="btn btn-info">Kaydet</button>
                </form>

            </div>
        </section>
    </div>
</div>
